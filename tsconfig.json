{
  "compilerOptions": {
    "module": "ESNEXT",
    "target": "ES5",
    "noEmit": true,
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@ltr/*": ["./packages/*/lib"],
      "*": ["node_modules", "./packages"]
    }
  },
  "include": ["./packages"],
  "exclude": ["node_modules", "dist"]
}
